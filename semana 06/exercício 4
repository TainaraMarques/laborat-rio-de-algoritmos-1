somaidades = 0
maioresdeidade = 0
entre10e30 = 0
pessoa = 0
idade = 0

while pessoa < 7:

    idade = int(input("Digite sua idade : "))
    pessoa+=1
    somaidades += idade


    if idade >= 18:
    

        if idade >= 10 and idade <= 30:
            entre10e30 += 1
        maioresdeidade += 1

mediaidades = somaidades / 7

porcentagem = (entre10e30 /pessoa ) * 100

print("A mÃ©dia das idades Ã©: ", mediaidades)
print("Quantidade de pessoas maiores de idade: ", maioresdeidade)
print("Porcentagem de pessoas com idade entre 10 e 30 anos: ", porcentagem, "%")

