moradores=0
elevadorA = 0
elevadorB = 0
elevadorC = 0

while moradores < 10:
    elevadores= input("qual elevador você utiliza com mais frequência? escolha A,B OU C ").upper()

    if elevadores == "A":
        elevadorA+=1

    elif elevadores == "B":
        elevadorB+=1

    elif elevadores == "C":
        elevadorC+=1
    moradores+=1

porcentagemA = (elevadorA/moradores)*100
porcentagemB = (elevadorB/moradores)*100
porcentagemC = (elevadorC/moradores)*100

print("Total de pessoas que usam o elevador A", elevadorA, " ou seja ", porcentagemA,"%")
print("Total de pessoas que usam o elevador B", elevadorB, " ou seja ", porcentagemB,"%")
print("Total de pessoas que usam o elevador C" , elevadorC, " ou seja ", porcentagemC,"%")


