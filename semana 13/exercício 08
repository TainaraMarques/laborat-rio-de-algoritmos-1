def preencher_array():
    array = []
    for i in range(1, 11):
        array.append(i)
    return array

def mostrar_array_inverso(arr):
    print("Array na ordem inversa:")
    for i in range(len(arr) - 1, -1, -1):
        print(arr[i], end=" ")
    print() 

def main():

    array = preencher_array()

    mostrar_array_inverso(array)

    main()
